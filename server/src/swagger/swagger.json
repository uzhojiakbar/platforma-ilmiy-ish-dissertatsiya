{
  "openapi": "3.1.0",
  "info": {
    "title": "Platforma - Auth API",
    "version": "2.1.1",
    "description": "This is the API documentation for the Platforma application. This section covers authentication, including login and registration."
  },
  "servers": [
    {
      "url": "http://65.108.155.163:2805/",
      "description": "Mexroj server"
    },
    {
      "url": "http://localhost:5555",
      "description": "Local server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "Auth"
        ],
        "description": "Register a new user with the given information",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "description": "User's phone number"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password"
                  },
                  "first_name": {
                    "type": "string",
                    "description": "User's first name"
                  },
                  "last_name": {
                    "type": "string",
                    "description": "User's last name"
                  },
                  "role": {
                    "type": "string",
                    "description": "User's role"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Foydalanuvchi muvaffaqiyatli yaratildi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "409": {
            "description": "Bunday foydalanuvchi allaqachon mavjud"
          },
          "500": {
            "description": "Serverda xatolik yuz berdi"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login a user",
        "tags": [
          "Auth"
        ],
        "description": "Login a user with the given information",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "description": "User's phone number"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Foydalanuvchi muvaffaqiyatli tizimga kirildi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Parol noto'g'ri"
          },
          "404": {
            "description": "Foydalanuvchi topilmadi"
          },
          "500": {
            "description": "Serverda xatolik yuz berdi"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "Logout a user",
        "tags": [
          "Auth"
        ],
        "description": "Logout a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "accessToken": {
                    "type": "string",
                    "description": "User's access token"
                  },
                  "refreshToken": {
                    "type": "string",
                    "description": "User's refresh token"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Foydalanuvchi muvaffaqiyatli tizimdan chiqdi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Token noto'g'ri yoki buzilgan"
          },
          "404": {
            "description": "Foydalanuvchi topilmadi"
          }
        }
      }
    },
    "/api/auth/logout-all": {
      "post": {
        "summary": "Logout all sessions of a user",
        "tags": [
          "Auth"
        ],
        "description": "Logout all sessions of a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Foydalanuvchining barcha sessiyasi o'chirildi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "500": {
            "description": "Serverda xatolik yuz berdi"
          }
        }
      }
    },
    "/api/auth/refresh-token": {
      "post": {
        "summary": "Refresh a user's access token",
        "tags": [
          "Auth"
        ],
        "description": "Refresh a user's access token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refreshToken": {
                    "type": "string",
                    "description": "User's refresh token"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Foydalanuvchi muvaffaqiyatli token yangilandi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Token noto'g'ri yoki buzilgan"
          }
        }
      }
    },
    "/api/user/": {
      "get": {
        "summary": "Get user information",
        "tags": [
          "User"
        ],
        "description": "Get user information",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Foydalanuvchi ma'lumotlari",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "example": "3eb84c71-14c5-4b45-82a2-7707f848e8ce"
                    },
                    "first_name": {
                      "type": "string",
                      "example": "string"
                    },
                    "last_name": {
                      "type": "string",
                      "example": "string"
                    },
                    "phone": {
                      "type": "string",
                      "pattern": "^998[0-9]{9}$",
                      "example": "998978222427"
                    },
                    "role": {
                      "type": "string",
                      "enum": [
                        "user",
                        "admin"
                      ],
                      "example": "user"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-06-14 20:50:50"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-06-14 20:50:50"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Token noto'g'ri yoki buzilgan"
          },
          "404": {
            "description": "Foydalanuvchi topilmadi"
          }
        }
      }
    },
    "/api/user/sessions": {
      "get": {
        "summary": "Get user sessions",
        "tags": [
          "User"
        ],
        "description": "Get user sessions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Foydalanuvchi sessiyasi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Token noto'g'ri yoki buzilgan"
          }
        }
      }
    },
    "/api/user/session/{session_id}": {
      "get": {
        "summary": "Get user session",
        "tags": [
          "User"
        ],
        "description": "Get user session",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "session_id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Session ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Foydalanuvchi sessiyasi"
          },
          "400": {
            "description": "Nimadur xato ketdi"
          },
          "401": {
            "description": "Token noto'g'ri yoki buzilgan"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Admin",
      "description": "Adminlar boshqaruvi"
    },
    {
      "name": "User",
      "description": "Foydalanuvchilarlar boshqaruvi (foydaluvchilarning o`zini boshqarishi uchun)"
    },
    {
      "name": "Auth",
      "description": "Avtorizatsiya uchun pointlar"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the user"
          },
          "phone": {
            "type": "string",
            "pattern": "^998[0-9]{9}$",
            "description": "Uzbekistan phone number in format 998XXXXXXXXX"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "description": "User's password (minimum 6 characters)"
          },
          "first_name": {
            "type": "string",
            "description": "User's first name"
          },
          "last_name": {
            "type": "string",
            "description": "User's last name"
          },
          "role": {
            "type": "string",
            "enum": [
              "user",
              "admin",
              "chief"
            ],
            "description": "User's role in the system"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}